    {
        "manifest_version": 3,
        "name": "Productivity extension",
        "description": "Extension that focuses on improving your productivity",
        "version": "1.0",
        "action": {
            "default_popup": "index.html"
        },
        "content_scripts": [
            {
                "js": [
                    "content-script.js"
                ],
                "matches": [
                    "<all_urls>"
                ]
            }
        ],
        "host_permissions": [
            "<all_urls>"
        ],
        "permissions": [
            "storage",
            "scripting",
            "tabs"
        ],
        "background": {
            "service_worker": "service_worker.js",
            "type": "module"
        },
        "web_accessible_resources": [
            {
                "resources": [
                    "index.html",
                    "assets/*"
                ],
                "matches": [
                    "<all_urls>"
                ]
            }
        ]
    }